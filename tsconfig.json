{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
      // "@components/*": ["./src/components/*"],
      // "@screens/*": ["./src/screens/*"],
      // "@utils/*": ["./src/utils/*"],
      // "@assets/*": ["./src/assets/*"],
      // "@hooks/*": ["./src/hooks/*"],
      // "@services/*": ["./src/services/*"],
      // "@types/*": ["./src/types/*"],
      // "@/types/*": ["./src/types/*"]
    },
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
